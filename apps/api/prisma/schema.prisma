// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Database {
  id          String            @id @default(uuid())
  name        String            @unique
  fancyName   String
  description String?
  icon        String
  image       String
  versions    DatabaseVersion[]
  env         DatabaseEnv[]
  volumes     DatabaseVolume[]
  application Application[]
}

model DatabaseVersion {
  id      String @id @default(uuid())
  version String

  database   Database? @relation(fields: [databaseId], references: [id])
  databaseId String?
}

model DatabaseEnv {
  id          String    @id @default(uuid())
  key         String
  value       String
  description String?
  database    Database? @relation(fields: [databaseId], references: [id])
  databaseId  String?
}

model DatabaseVolume {
  id         String    @id @default(uuid())
  path       String
  database   Database? @relation(fields: [databaseId], references: [id])
  databaseId String
}

// APPLICATION
model Application {
  id            String                   @id @default(uuid())
  applicationId String                   @unique
  name          String                   @unique
  description   String
  image         String
  replicas      Int
  memory        Int
  cpu           Int
  volumes       ApplicationVolume[]
  env           ApplicationEnv[]
  deployments   ApplicationDeployments[]
  database      Database?                @relation(fields: [databaseId], references: [id])
  databaseId    String?
  creationDate  DateTime
  updateTime    DateTime
}

model ApplicationVolume {
  id            String                        @id @default(uuid())
  path          String
  size          Int
  accessMode    ApplicationVolumeAccessMode[]
  application   Application?                  @relation(fields: [applicationId], references: [id])
  applicationId String?
}

model ApplicationVolumeAccessMode {
  id                  String             @id @default(uuid())
  accessMode          String
  applicationVolume   ApplicationVolume? @relation(fields: [applicationVolumeId], references: [id])
  applicationVolumeId String?
}

model ApplicationEnv {
  id            String       @id @default(uuid())
  key           String
  value         String
  description   String?
  application   Application? @relation(fields: [applicationId], references: [id])
  applicationId String?
}

model ApplicationDeployments {
  id            String      @id @default(uuid())
  application   Application @relation(fields: [applicationId], references: [id])
  applicationId String
  creationDate  DateTime    @default(now())
}
