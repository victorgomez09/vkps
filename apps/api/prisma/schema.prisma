// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Addon {
  id          String         @id @default(uuid())
  name        String         @unique
  fancyName   String
  description String?
  icon        String
  image       String
  versions    AddonVersion[]
  type        AddonType      @relation(fields: [addonTypeId], references: [id])
  addonTypeId String
  env         AddonEnv[]
  volumes     AddonVolume[]
  application Application[]
}

model AddonType {
  id    String  @id @default(uuid())
  type  String
  addon Addon[]
}

model AddonVersion {
  id      String @id @default(uuid())
  version String

  addon   Addon?  @relation(fields: [addonId], references: [id])
  addonId String?
}

model AddonEnv {
  id          String  @id @default(uuid())
  key         String
  value       String
  description String?
  addon       Addon?  @relation(fields: [addonId], references: [id])
  addonId     String?
}

model AddonVolume {
  id      String @id @default(uuid())
  path    String
  addon   Addon? @relation(fields: [addonId], references: [id])
  addonId String
}

// APPLICATION
model Application {
  id            String @id @default(uuid())
  applicationId String @unique
  name          String @unique
  description   String
  replicas      Int
  memory        Int
  cpu           Int

  addon        Addon?   @relation(fields: [addonId], references: [id])
  addonId      String
  creationDate DateTime
  updateTime   DateTime
}

model ApplicationVolume {
  id         String                        @id @default(uuid())
  path       String
  size       Int
  accessMode ApplicationVolumeAccessMode[]
}

model ApplicationVolumeAccessMode {
  id                  String             @id @default(uuid())
  accessMode          String
  applicationVolume   ApplicationVolume? @relation(fields: [applicationVolumeId], references: [id])
  applicationVolumeId String?
}
