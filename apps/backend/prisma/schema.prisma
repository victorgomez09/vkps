generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

// USER
model User {
  id       Int     @id @default(autoincrement())
  email    String  @unique
  password String
  name     String?
}

// DEPLOYMENT
model Deployment {
  id             String             @id @default(uuid())
  deploymentId   String             @unique
  name           String             @unique
  description    String
  image          String
  replicas       Int
  memory         String
  cpu            String
  exposedNetwork Boolean            @default(false)
  port           Int                @default(8080)
  volumes        DeploymentVolume[]
  env            DeploymentEnv[]
  creationDate   DateTime
  updateTime     DateTime

  @@map("application")
}

model DeploymentVolume {
  id           String                       @id @default(uuid())
  path         String
  size         String
  accessMode   DeploymentVolumeAccessMode[]
  deployment   Deployment?                  @relation(fields: [deploymentId], references: [id])
  deploymentId String?

  @@map("deployment-volume")
}

model DeploymentVolumeAccessMode {
  id                 String            @id @default(uuid())
  accessMode         String
  deploymentVolume   DeploymentVolume? @relation(fields: [deploymentVolumeId], references: [id])
  deploymentVolumeId String?

  @@map("deployment-volume-access-mode")
}

model DeploymentEnv {
  id           String      @id @default(uuid())
  key          String
  value        String
  description  String?
  deployment   Deployment? @relation(fields: [deploymentId], references: [id])
  deploymentId String?

  @@map("deployment-env")
}
